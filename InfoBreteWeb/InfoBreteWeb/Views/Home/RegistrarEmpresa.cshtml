@model InfoBreteWeb.Entities.Empresas

@{
    ViewData["Title"] = "Registro Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="well well-sm">
                        <form class="form-horizontal" method="post">
                            <fieldset>
                                <legend class="text-center header">Registrar Empresa</legend>

                                @using (Html.BeginForm("RegistrarEmpresa", "Home"))
                                {
                                    @if(ViewBag.msj != null)
                                    {
                                        <div class="alert alert-info" style="text-align:center" role="alert">
                                            @ViewBag.msj
                                        </div>
                                    }
                                }

                                <div class="form-group">
                                    <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(e => e.nombreEmpresa, new {@type= "text", @class= "form-control", @placeholder= "Nombre de la empresa:"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(e => e.direccion, new { @type = "text", @class = "form-control", @placeholder = "Direccion de la empresa:" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(e => e.descripcion, new { @type = "text", @class = "form-control", @placeholder = "Descripcion de la empresa:" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(e => e.sitioWeb, new { @type = "text", @class = "form-control", @placeholder = "Sitio Web de la empresa:" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(e => e.telefono, new { @type = "text", @class = "form-control", @placeholder = "Telefono de la empresa:" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-primary btn-lg">Registrar Empresa</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>