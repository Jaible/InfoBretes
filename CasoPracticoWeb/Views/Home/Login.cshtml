@model InfoBretesWeb.Entities.Login

<div class="container__form" style="height: 35vh;">
    <form asp-action="Login">
        <h2>Login</h2>
        <div class="content">
            <div class="input-box">
                <label>Correo Electronico</label>
                <input type="text" placeholder="Ingresa tu correo" asp-for="Email"/>
            </div>
            <div class="input-box">
                <label>Contraseña</label>
                <input type="text" placeholder="Ingresa tu contraseña" asp-for="Password" />
            </div>
        </div>
        <div class="button-container">
            <button type="submit" >Login</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
